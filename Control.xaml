<UserControl x:Class="blekenbleu.loaded.Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:blekenbleu.loaded"
             xmlns:styles="clr-namespace:SimHub.Plugins.Styles;assembly=SimHub.Plugins"
             mc:Ignorable="d"
             xmlns:ui="clr-namespace:SimHub.Plugins.UI;assembly=SimHub.Plugins"
             xmlns:converter="http://metro.mahapps.com/winfx/xaml/iconpacks">
    <ScrollViewer>
        <Grid Height="150" Width="800" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="0*" />
            </Grid.ColumnDefinitions>
            <styles:SHSection Title="OPTIONS" Grid.ColumnSpan="2" ShowSeparator="True">
                <StackPanel Orientation="Horizontal">
                    <ui:ControlsEditor
						FriendlyName="Decrement Gain" ActionName="Loaded.DecrementGain"></ui:ControlsEditor>
                    <ui:ControlsEditor
						FriendlyName="Increment Gain" ActionName="Loaded.IncrementGain"></ui:ControlsEditor>
                </StackPanel>
            </styles:SHSection>
        </Grid>
    </ScrollViewer>
</UserControl>
